<%= simple_form_for(@profile) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :display_name %>
    <%= f.input :user_id %>
    <%= f.input :bio %>
    <%= f.input :dob %>
    <%= f.file_field :image %>
    <%= f.input :twitter %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
