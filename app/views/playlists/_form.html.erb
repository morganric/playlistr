</script>

<hr/>



 <div class="col-sm-6">
 <section class="panel panel-default">
    <header class="panel-heading font-bold">Upload</header>
    <div class="panel-body">
      <%= simple_form_for(@playlist, :class=>"form-inline", :role=>"form") do |f|  %>
  <%= f.error_notification %>


  <div class="form-group">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.label :image %>
    <%= f.file_field :image %>
    <%= f.input :user_id, as: :hidden %>
    <%#= f.input :published, as: :hidden %>
    <br/>
   <%= f.label :tracks %>
    <%= attachinary_file_field_tag 'playlist[audio]', @playlist, :audio %>


  </div>
  <br/>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
    </div>
</section>
</div>

