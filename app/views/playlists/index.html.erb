<h1>PlayListr</h1>
  <ol>
    <% @playlists.each do |playlist| %>
    	<% if playlist.audio_files.count > 0 %>
            <h3><li class="clearfix"><%= link_to image_tag(playlist.image.url(:thumbnail), :class => 'pull-left '), playlist %>
                    <%= link_to playlist.title, playlist %> by <small><%= playlist.user %></small>
        	<span class="label label-default"><i class="glyphicon glyphicon-th-list"></i> <%= playlist.audio_files.count %></span>
        	<span class="label label-success"><i class="glyphicon glyphicon-play"></i> <%= playlist.plays.to_i %></span>
        </li></h3>
        <% end %>
    <% end %>
    </ol>
<br>
