
<div class="clearfix">
    <h1>PlayListr</h1> 
    <div class="col-md-8"> 

    <ul>
    <% @playlists.each do |playlist| %>
    	<% if playlist.audio_files.count > 0 %>
        <li class="clearfix">
        <span class="col-md-3">
            <%= link_to image_tag(playlist.image.url(:thumbnail), :class => 'pull-left img-thumbnail'), playlist %>
            </span>
        <span class="col-md-9">
            <h2>
                    <%= link_to playlist.title.capitalize, playlist %> by <small><%= playlist.user %></small>      
                </h2>
                 <p class="well"><%= playlist.description %></p>
            <span class="label label-default"><i class="glyphicon glyphicon-th-list"></i> <%= playlist.audio_files.count %></span>
            <span class="label label-success"><i class="glyphicon glyphicon-play"></i> <%= playlist.plays.to_i %></span>

        </span>
        </li>
        <hr/>
        <% end %>
    <% end %>
    </ul>
    </div>

    <div class="col-md-4">
        <div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Panel title</h3>
  </div>
  <div class="panel-body">
    Panel content
  </div>
</div>
    </div>
</div>
